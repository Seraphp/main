<?xml version="1.0" encoding="UTF-8"?>
<seraphp xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.seraphp.com/seraphpConfig" xmlns:tns="http://www.seraphp.com/seraphpConfig" xsi:schemaLocation="http://www.seraphp.com/seraphpConfig seraphpConfig.xsd">
  <servers pidpath="/home/peter/workspace/seraphp">
    <server id="main">
      <instance>
        <ipc>unixsockets</ipc>
        <maxChildren>4</maxChildren>
        <address>127.0.0.1</address>
        <port>8088</port>
        <timeout>60</timeout>
        <engines>
          <engine class="Default" id="default"></engine>
          <engine class="StaticFileServer" id="static">
            <param name="basepath">/home/peter/workspace/seraphp</param>
          </engine>
        </engines>
      </instance>
      <urimap>
        <url engine="default">/</url>
        <url engine="admin" auth="internal">/admin/</url>
        <url engine="static">/static/</url>
        <url engine="dispatch" target="test">/test/</url>
      </urimap>
      <resources>
        <includes>
          <path>/home/peter/workspace/seraphp/Server/</path>
        </includes>
        <static>
          <path>/home/peter/workspace/seraphp/</path>
        </static>
        <auth>
          <users>
            <user role="admin">peter</user>
          </users>
          <rules type="xml">
            <path>/home/peter/workspace/seraphp/Auth/rules/</path>
          </rules>
        </auth>
      </resources>
      <logs>
        <log handler="console" ident="Seraphp" level="PEAR_LOG_ERR">
          <conf stream="STDOUT" buffering="false" />
        </log>
        <log handler="file" ident="DEBUG" level="PEAR_LOG_ERR">
          <conf/>
        </log>
      </logs>
    </server>
    <server id="test">
      <instance>
        <address>127.0.0.1</address>
        <port>8090</port>
      </instance>
      <urimap>
        <url engine="default">/test/</url>
      </urimap>
    </server>
  </servers>
</seraphp>
